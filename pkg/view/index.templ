package view

templ Hello(name string) {
	<div>Hello, { name }</div>
}

templ Index(name string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<title>Templ/HTMX Playground</title>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<script src="https://unpkg.com/htmx.org/dist/htmx.min.js"></script>
		</head>
		<body>
			@Hello(name)
			<div>Test Text</div>
		</body>
	</html>
}
